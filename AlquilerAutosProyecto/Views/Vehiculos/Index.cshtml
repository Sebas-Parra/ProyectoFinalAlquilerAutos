<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">¿Desea agregar un nuevo dato?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <fieldset class="mb-3">
                    <form id="formAgregar" class="forma">
                        <p class="title">Formulario</p>
                        <p class="message">Al agregar, se insertará el registro en la tabla</p>
                        <div class="flex">
                            <label for="id" class="form-label">
                                <input type="number" class="input" id="id" name="id" placeholder="" required="" readonly>
                                <span>ID</span>
                            </label>

                            <label for="marca" class="form-label">
                                <input class="input" type="text" id="marca" name="marca" placeholder="" required="">
                                <span>Marca</span>
                            </label>

                        </div>

                        <label for="modelo" class="form-label">
                            <input class="input" type="text" maxlength="300" id="modelo" name="modelo" placeholder="" required="">
                            <span>Modelo</span>
                        </label>
                        <label for="anio" class="form-label">
                            <input class="input" type="number" maxlength="300" id="anio" name="anio" placeholder="" required="">
                            <span>Año</span>
                        </label>
                        <label for="precio" class="form-label">
                            <input class="input" type="number" step="0.01" maxlength="300" id="precio" name="precio" placeholder="" required="">
                            <span>Precio</span>
                        </label>
                        <label for="estado" class="form-label">
                            <select id="estado" class="input" name="estado" required>
                                <option value="">Seleccione el estado de la reserva</option>
                                <option value="Disponible">Disponible</option>
                                <option value="Reservado">Reservado</option>
                                <option value="Rentado">Rentado</option>
                                <option value="En mantenimiento	">En mantenimiento	</option>
                            </select>
                        </label>
                        <label for="imagen" class="form-label">
                            <input class="input" type="text" maxlength="300" id="imagen" name="imagen" placeholder="" required="">
                            <span>Imagen</span>
                        </label>
                        <label for="video" class="form-label">
                            <input class="input" type="text" maxlength="300" id="video" name="video" placeholder="" required="">
                            <span>Video</span>
                        </label>

                    </form>

                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btnAgregar" data-bs-dismiss="modal" onclick="guardarDatos()">Añadir</button>
                <button class="btnLimpiar" type="button" data-bs-dismiss="modal" onclick="modificar()">Actualizar</button>
                <button class="btnLimpiar" type="button" onclick="limpiarDatos()">Limpiar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

