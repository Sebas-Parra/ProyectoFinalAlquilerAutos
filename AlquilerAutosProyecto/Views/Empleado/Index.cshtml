<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">¿Desea agregar un nuevo dato?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <fieldset class="mb-3">
                    <form id="formAgregar" class="forma">
                        <p class="title">Formulario</p>
                        <p class="message">Al agregar, se insertará el registro en la tabla</p>
                        <div class="flex">
                            <label for="id" class="form-label">
                                <input type="number" class="input" id="id" name="id" placeholder="" required="" readonly>
                                <span>ID</span>
                            </label>

                            <label for="nombre" class="form-label">
                                <input class="input" type="text" id="nombre" name="nombre" placeholder="" required="">
                                <span>Nombre</span>
                            </label>

                        </div>

                        <label for="apellido" class="form-label">
                            <input class="input" type="text" maxlength="300" id="apellido" name="apellido" placeholder="" required="">
                            <span>Apellido</span>
                        </label>
                        <label for="cargo" class="form-label">
                            <input class="input" type="text" maxlength="300" id="cargo" name="cargo" placeholder="" required="">
                            <span>Cargo</span>
                        </label>
                        <label for="telefono" class="form-label">
                            <input class="input" type="number" maxlength="300" id="telefono" name="telefono" placeholder="" required="">
                            <span>Telefono</span>
                        </label>
                        <label for="email" class="form-label">
                            <input class="input" type="email" maxlength="300" id="email" name="email" placeholder="" required="">
                            <span>Email</span>
                        </label>
                        <label for="password" class="form-label">
                            <input class="input" type="password" maxlength="300" id="password" name="password" placeholder="" required="">
                            <span>Password</span>
                        </label>

                    </form>

                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btnAgregar" data-bs-dismiss="modal" onclick="guardarEmpleado()">Añadir</button>
                <button class="btnLimpiar" type="button" data-bs-dismiss="modal" onclick="modificar()">Actualizar</button>
                <button class="btnLimpiar" type="button" onclick="limpiarEmpleados()">Limpiar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


