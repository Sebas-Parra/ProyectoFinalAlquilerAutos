@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/Home.css">

<div class="container-fluid main-section">

    <!-- Contenido principal -->
    <div class="row content">
        <div class="col-md-6 text-box">
            <h1>Motor optimeringar till dom flesta fordon och maskiner.</h1>
            <p>Vi använder oss av världsledande program och utrustning</p>
            <button class="btn btn-dark">Hitta Oss</button>
            <button class="btn btn-outline-light">Läs mer</button>
            <p class="open-hours">Öppettider 09:00 - 17:00</p>
        </div>
        <div class="col-md-6 car-image"></div>
    </div>

    <!-- Marcas / patrocinadores -->
    <div class="brands">
        <span>BR TURBO</span>
        <span>AUTEL</span>
        <span>KenLift</span>
        <span>BEST SYSTEMS</span>
    </div>
</div>

<h2 class="mt-5 text-white">Lista de Autos</h2>

<!-- Contenedor donde se mostrarán los autos -->
<div id="Autos" class="cars-grid"></div>

<!-- Botones de navegación -->
<div class="pagination">
    <button id="prev-page" class="page-btn" disabled>❮</button>
    <button id="next-page" class="page-btn">❯</button>
</div>

<!-- Botón para ver todos los autos -->
<div class="text-center mt-3">
    <button id="see-all" class="btn btn-outline-light">See All</button>
</div>

<input type="date" name="name" value="" />

<script src="/js/generic.js"></script>
<script src="/js/Home.js"></script>
